+Class IMotor //抽象基类，三个纯虚函数
{
public:
   int Send Current ;
   virtual ~IMotor() {} //虚析构，释放指向子类的对象的父类指针
   virtual void SetOutput (int ID , int Send Current ) = 0 ;
   virtual int GetSpeed () = 0 ;
   virtual int Update (int input , int resistance) = 0 ; 
};

Class DJIMotor : public IMotor //DJI硬件电机继承IMotor
{
public:
   void SetOutput ( int Send Current) //打印模拟发送CAN报文
   {
    printf("[CAN BUS] ID:0x201 Send Current:"d%"",Send Current);
   }
   int GetSpeed () //返回假数据，固定返回 1000 rpm
   {
    return 1000 rpm ;
   }
   int Update () //这个不知道该怎么写
   {

   }    
};
Class SimMotor : public IMotor
{
public:
  int velocity_ = 0 ;
  void SetOutput (int Send Current) {
    this* Send Current = Send Current ;
  }
  int Update (int resistance)
  {
    velocity_ = this* velocity_ + ( this* Send Current - this* resistance);
    return velocity_ ;
  }
  int GetSpeed () {
    return velocity_ ;
  }
};
void TestMotor (IMotor* motor)
{
  motor->SetOutput(500);
  motor->Update(20);
  motor->GetSpeed();
}